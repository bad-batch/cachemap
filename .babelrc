{
  "comments": false,
  "env": {
    "browser": {
      "presets": [
        ["@babel/preset-env", {
          "modules": false,
          "targets": { "browsers": "last 2 versions" },
          "useBuiltIns": "usage"
        }],
        "@babel/preset-stage-0"
      ]
    },
    "debug": {
      "presets": [
        ["@babel/preset-env", {
          "modules": false,
          "targets": { "browsers": "chrome >= 60" },
          "useBuiltIns": "usage"
        }],
        "@babel/preset-stage-0"
      ]
    },
    "main": {
      "presets": [
        ["@babel/preset-env", {
          "targets": { "node": "8" },
          "useBuiltIns": "usage"
        }],
        "@babel/preset-stage-0"
      ]
    },
    "module": {
      "presets": [
        ["@babel/preset-env", {
          "modules": false,
          "targets": { "node": "8" },
          "useBuiltIns": "usage"
        }],
        "@babel/preset-stage-0"
      ]
    }
  },
  "ignore": [
    "**/*.d.ts",
    "**/*.test.*"
  ],
  "plugins": [
    "lodash"
  ]
}
